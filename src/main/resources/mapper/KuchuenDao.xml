<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.KuchuenDao">


    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        a.id as id
        ,a.name as name
        ,a.number as number
    </sql>

    <select id="selectListView" parameterType="map" resultType="com.entity.view.KuchuenView" >
        SELECT
        <include refid="Base_Column_List" />
        FROM Kuchuen  a
        <where>
            <if test=" params.name != '' and params.name != null and params.name != 'null' ">
                and a.name like CONCAT('%',#{params.name},'%')
            </if>
            <if test=" params.number != '' and params.number != null and params.number != 'null' ">
                and a.number = #{params.number}
            </if>
        </where>
        order by a.id desc
    </select>

</mapper>